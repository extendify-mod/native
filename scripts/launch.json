{
  "$schema": "vscode://schemas/launch",
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(vsdbg) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "",
      "args": ["--single-process"],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "environment": [
        {
          "name": "EXTENDIFY_LIB_PATH",
          "value": "${workspaceFolder}\\build\\extendify.dll"
        }
      ],
      "console": "integratedTerminal",
      "symbolOptions": {
        "searchMicrosoftSymbolServer": true
      },
      "preLaunchTask": "Build",
      "logging": {
        "programOutput": true,
        "processExit": true,
        "threadExit": true,
        "moduleLoad": false,
        "exceptions": true,
      }
    },
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "",
      "args": ["--single-process"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "windows": {
        "environment": [
          {
            "name": "EXTENDIFY_LIB_PATH",
            "value": "${workspaceFolder}\\build\\extendify.dll"
          }
        ],
      },
      "linux": {
        "environment": [
          {
            "name": "EXTENDIFY_LIB_PATH",
            "value": "${workspaceFolder}/build/extendify.so"
          }
        ]
      },
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "(lldb) Launch",
      "program": "",
      "args": [
        "--single-process"
      ],
      "env": {
        "EXTENDIFY_LIB_PATH": "${workspaceFolder}\\build\\extendify.dll"
      },
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build"
    }
  ]
}
