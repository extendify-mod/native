{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "command": "build",
      "type": "cmake",
      "targets": [
        "extendify"
      ],
      "presentation": {
        "clear": true,
        "reveal": "silent",
        "revealProblems": "onProblem",
        "echo": true,
        "group": "build",
        "showReuseMessage": true,
        "focus": false,
        "panel": "shared"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "inject wrapper",
      "type": "shell",
      "windows": {
        "command": "${workspaceFolder}\\scripts\\injectWrapper.ps1",
      },
      "linux": {
        "command": "${workspaceFolder}/scripts/injectWrapper.sh"
      },
      "problemMatcher": []
    },
    {
      "label": "generate launch.json",
      "type": "shell",
      "windows": {
        "command": "${workspaceFolder}\\scripts\\generateLaunchJSON.ps1",
      },
      "linux": {
        "command": "${workspaceFolder}/scripts/generateLaunchJSON.sh"
      },
      "problemMatcher": []
    },
    {
      "type": "cmake",
      "label": "Configure",
      "command": "configure",
      "problemMatcher": []
    }
  ]
}